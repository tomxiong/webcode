{
  "name": "clsi-management-platform",
  "version": "1.0.0",
  "description": "CLSI Standards and Expert Rules Management Platform",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "tsx src/test-setup.ts",
    "test-auth": "tsx src/test-auth.ts",
    "test-auth-endpoints": "tsx src/test-auth-endpoints.ts",
    "test-microorganism-endpoints": "tsx src/test-microorganism-endpoints.ts",
    "test-drug-endpoints": "tsx src/test-drug-endpoints.ts",
    "test-breakpoint-endpoints": "tsx src/test-breakpoint-endpoints.ts",
    "test-expert-rule-endpoints": "tsx src/test-expert-rule-endpoints.ts",
    "test-sample-lab-endpoints": "tsx src/test-sample-lab-endpoints.ts",
    "demo": "tsx src/demo-platform.ts",
    "test:unit": "vitest run src/tests/unit",
    "test:integration": "vitest run src/tests/integration",
    "test:e2e": "vitest run src/tests/e2e",
    "test:coverage": "vitest run --coverage",
