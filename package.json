    "@types/node": "^22.7.4",
    "@types/node-fetch": "^2.6.11",
    "@types/sqlite3": "^3.1.11",
    "@vitest/ui": "^3.2.4",
    "c8": "^10.1.3",
    "vitest": "^3.2.4"
  }
